<p id="notice"></p>

<h1>Lunches</h1>

<table>
  <thead>
    <tr>
      <th> Lunch Type |  </th>
      <th> Rank |  </th>
      <th> User Votes | </th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @lunches.each do |lunch| %>
    <div class="link row clearfix">
      <tr>
        <td><%= lunch.food_type %></td>        
        <td><%= lunch.rank %></td>
        <td>
          <%= link_to like_lunch_path(lunch), method: :put, class: "btn btn-default btn-sm" do %>
          <span class="glyphicon glyphicon-chevron-up"></span>
          Upvote
          <%= lunch.get_upvotes.size %>
          <% end %>
        </td>
        <td>
          <%= link_to dislike_lunch_path(lunch), method: :put, class: "btn btn-default btn-sm" do %>
          <span class="glyphicon glyphicon-chevron-down"></span>
          Downvote
          <%= lunch.get_downvotes.size %>
          <% end %>
        </td>
        <td>Will be email, eventually</td>
        <td><%= link_to 'Show |', lunch %></td>
        <td><%= link_to 'Edit |', edit_lunch_path(lunch) %></td>
        <td><%= link_to 'Destroy', lunch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New lunch', new_lunch_path %>